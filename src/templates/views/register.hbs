<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font Awesome 5 CDN link to add icones -->
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Sign Up</title>
    <!-- Linking .css file with HTML page -->
    <link rel="stylesheet" href="style1.css" />
  </head>
  <body>
        {{>navbar}}
    <div class="container">
      <!-- Left section of signup form -->
      <dive>
        <h1>Sign Up</h1>
        <h5>Welcome to our Sign-Up page</h5>
        <form action="/register" method="POST">
          <div>
            <p><label for="userNmae">User Name</label></p>
            <input type="text" name="username" id="userName" autocomplete="off" />
          </div>
          <div>
            <p><label for="email">Email Address</label></p>
            <input
              type="email"
              id="email"
              name="email"
              required
              autocomplete="off"
            />
          </div>
          <div>
            <p><label for="phone">Phone Number</label></p>
            <input
              type="number"
              id="phone"
              name="phone_no"
              required
              autocomplete="off"
            />
          </div>
          <div>
            <p><label for="password">Password</label></p>
            <input type="password" name="password" id="password" required />
          </div>
          <button type="submit" id="btn">Sign Up Now</button>
          <p>Already a member? <a href="/login">Log in</a></p>
        </form>
        <div></div>
        <!-- Adding social icones -->

      </dive>
      <!-- Right section of the form containing image -->

    </div>
  </body>
</html>